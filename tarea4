package Taller_inicial;
import java.util.Scanner;

public class tarea4 {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Ingrese el tipo de prenda (camisa (precio=25000), pantalón(precio=40000), chaqueta(precio=60000): ");
        String tipoPrenda = scanner.nextLine().toLowerCase();

        System.out.print("Ingrese la cantidad de prendas que vas a comprar: ");
        int cantidad = scanner.nextInt();

        double precioUnitario;
        switch (tipoPrenda) {
            case "camisa":
                precioUnitario = 25000;
                break;
            case "pantalón":
                precioUnitario = 40000;
                break;
            case "chaqueta":
                precioUnitario = 60000;
                break;
            default:
                System.out.println("Tipo de prenda no válido.");
                return;
        }

        double total = precioUnitario * cantidad;

        if (cantidad > 5) {
            total *= 0.85;
            System.out.println("al comprar mas de 5 prendas, se le aplica el 15% de descuento al total de la compra gracias por su compra");

        }

        System.out.println("\nTotal a pagar: $" + total);
    }
}
